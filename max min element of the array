#include<limits.h>
class Solution
{
   public:
    int findSum(int A[], int N)
    {
    	int min = A[0];
    	int max = A[0];
    	
    	for(int i = 0 ; i  < N ; i++){
    	    if(A[i] < min){
    	        min = A[i];
    	    }
    	    
    	    else if(A[i]  > max){
    	        max = A[i];
    	    }
    	}
    	
    	return min + max;
    	
    }

};
